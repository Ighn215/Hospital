<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<?import com.jfoenix.controls.JFXToggleButton?>
<AnchorPane id="AnchorPane" maxHeight="768.0" maxWidth="1024.0" minHeight="768.0" minWidth="1024.0"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="hospital.controller.MainController">

    <MenuBar layoutX="-3.0" layoutY="7.0" prefHeight="42.0" prefWidth="1024.0" AnchorPane.leftAnchor="0.0"
             AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <Menu mnemonicParsing="false" text="Файл">
            <MenuItem mnemonicParsing="false" onAction="#newFile" text="Новый"/>
            <SeparatorMenuItem mnemonicParsing="false"/>
            <MenuItem mnemonicParsing="false" onAction="#openFile" text="Открыть"/>
            <SeparatorMenuItem mnemonicParsing="false"/>
            <MenuItem mnemonicParsing="false" onAction="#saveFile" text="Сохранить"/>
            <SeparatorMenuItem mnemonicParsing="false"/>
            <MenuItem mnemonicParsing="false" onAction="#saveFileAs" text="Сохранить как"/>
            <SeparatorMenuItem mnemonicParsing="false"/>
            <MenuItem mnemonicParsing="false" onAction="#exit" text="Выйти"/>
        </Menu>
    </MenuBar>
    <TableView fx:id="table" layoutY="44.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="573.0" prefWidth="1014.0"
               AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="42.0">
        <columns>
            <TableColumn fx:id="numHospital" text="Номер"/>
            <TableColumn editable="false" maxWidth="1.7976931348623157E308" minWidth="-1.0" prefWidth="943.0"
                         resizable="false" sortable="false" style="-fx-alignmen: CENTER;" text="Штат">
                <columns>
                    <TableColumn fx:id="surgeon" maxWidth="134.0" minWidth="134.0" resizable="false" text="Хирург"/>
                    <TableColumn fx:id="ophthalmologist" maxWidth="134.0" minWidth="134.0" resizable="false"
                                 text="Окулист"/>
                    <TableColumn fx:id="neurologist" maxWidth="134.0" minWidth="134.0" resizable="false"
                                 text="Невролог"/>
                    <TableColumn fx:id="lor" maxWidth="134.0" minWidth="134.0" resizable="false" text="Лор"/>
                    <TableColumn fx:id="cardiologist" maxWidth="134.0" minWidth="134.0" resizable="false"
                                 text="Кардиолог"/>
                    <TableColumn fx:id="endocrinologist" maxWidth="134.0" minWidth="134.0" resizable="false"
                                 text="Эндокринолог"/>
                    <TableColumn fx:id="therapist" maxWidth="134.0" minWidth="134.0" prefWidth="116.0" resizable="false"
                                 text="Терапевт"/>
                </columns>
            </TableColumn>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
    <ButtonBar layoutY="722.0" prefHeight="51.0" prefWidth="405.0" AnchorPane.bottomAnchor="0.0"
               AnchorPane.leftAnchor="0.0">
        <buttons>
            <Button onAction="#newStorage" mnemonicParsing="false" prefHeight="32.0" text="Добавить"/>
            <Button onAction="#editStorage" mnemonicParsing="false" prefHeight="32.0" text="Редактировать"/>
            <Button onAction="#deleteStorage" mnemonicParsing="false" prefHeight="32.0" prefWidth="355.0"
                    text="Удалить"/>
            <JFXToggleButton onAction="#filterData" fx:id="toggle" layoutX="599.0" layoutY="21.0"
                             text="Показать только укомплектовынные больницы"/>
        </buttons>
    </ButtonBar>
</AnchorPane>
